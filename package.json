{
	"name": "sass-project",
	"author": "issam-seghir",
	"private": true,
	"version": "0.0.0",
	"license": "MIT",
	"type": "module",
	"browserslist": [
		"defaults and supports es6-module",
		"maintained node versions"
	],
	"scripts": {
		"dev": "vite  --open",
		"build": "vite build --minify",
		"build:watch": "vite build --watch",
		"clean": "rm -rf dist css",
		"sass:watch": "sass src/scss/main.scss css/main.css --watch --no-source-map --error-css",
		"preview": "vite preview --open",
		"lint:js": "npx eslint \"**/*.{html,js,ts,jsx,tsx}\"",
		"lint:js:fix": "npm run lint:js -- --fix",
		"lint:style": "npx stylelint \"**/**/*.{html,css,less,postcss,scss,astro}\"",
		"lint:style:fix": "npm run lint:style -- --fix",
		"lint": "npm run lint:js && npm run lint:style",
		"lint:fix": "npm run lint -- --fix"
	},
	"devDependencies": {
		"cssnano": "^6.0.1",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-compat": "^4.1.4",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-import": "^2.28.1",
		"eslint-plugin-security": "^1.7.1",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"eslint-plugin-sonarjs": "^0.20.0",
		"eslint-plugin-unicorn": "^48.0.1",
		"gerillass": "^1.3.1",
		"postcss-html": "^1.5.0",
		"postcss-inline-svg": "^6.0.0",
		"postcss-markdown": "^1.2.0",
		"postcss-preset-env": "^9.1.3",
		"sass": "^1.66.1",
		"stylelint": "^15.10.3",
		"stylelint-config-clean-order": "^5.2.0",
		"stylelint-config-html": "^1.1.0",
		"stylelint-config-standard": "^34.0.0",
		"stylelint-config-standard-scss": "^10.0.0",
		"stylelint-high-performance-animation": "^1.9.0",
		"stylelint-selector-bem-pattern": "^3.0.1",
		"unplugin-auto-import": "^0.16.6",
		"unplugin-icons": "^0.17.0",
		"vite": "^4.4.5",
		"vite-aliases": "^0.11.3",
		"vite-plugin-dynamic-import": "^1.5.0"
	},
	"dependencies": {
		"rfs": "^10.0.0"
	}
}
